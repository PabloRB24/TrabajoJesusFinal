<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeriesPeliculas"
    android:background="@drawable/disney">


    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="72dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/series"
        android:layout_width="72dp"
        android:layout_height="76dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="272dp"
        android:background="#FF3A92D8"
        android:clickable="true"
        android:src="@drawable/play2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/peliculas"
        android:layout_width="72dp"
        android:layout_height="76dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="148dp"
        android:background="#FF3A92D8"
        android:clickable="true"
        android:src="@drawable/claquetazo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="146dp"
        android:layout_height="68dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="644dp"
        android:gravity="center"
        android:text="ABANDONAR"
        android:clickable="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/carruselSeries1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/series">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSelectorS"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/the_bear_serie" />

            <ImageView
                android:id="@+id/imageSelectorS2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/asesinato_en_el_fin_del_mundo" />

            <ImageView
                android:id="@+id/imageSelectorS3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@drawable/desaparecidos_serie" />

            <ImageView
                android:id="@+id/imageSelectorS4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@drawable/el_colapso_serie" />
            <ImageView
                android:id="@+id/imageSelectorS5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/el_encargado_serie" />

            <ImageView
                android:id="@+id/imageSelectorS6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@drawable/el_maestro_de_la_evasion_serie" />

            <ImageView
                android:id="@+id/imageSelectorS7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@drawable/el_paciente_serie" />

            <ImageView
                android:id="@+id/imageSelectorS8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@drawable/the_forsters_serie" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/carruselPeliculas1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/series">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageSelectorP"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/imageSelectorP2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/imageSelectorP3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/imageSelectorP4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/imageSelectorP5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/imageSelectorP6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/imageSelectorP7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/imageSelectorP8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_launcher_background" />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/seriesT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="16dp"
        android:text="Series"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/series"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pelisT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Peliculas"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/peliculas"
        app:layout_constraintEnd_toStartOf="@+id/imagePerfil"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/seriesT" />


    <Spinner
        android:id="@+id/spinnerGeneroSerie"
        android:layout_width="197dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:background="@color/white"
        android:backgroundTint="@color/azul"
        android:visibility="visible"
        android:entries="@array/generos"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carruselSeries1" />

    <Spinner
        android:id="@+id/spinnerGeneroPelicula"
        android:layout_width="197dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:background="@color/white"
        android:backgroundTint="@color/azul"
        android:entries="@array/generos"
        android:visibility="invisible"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carruselSeries1" />

</androidx.constraintlayout.widget.ConstraintLayout>